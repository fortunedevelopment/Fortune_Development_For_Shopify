<div class="w-full px-6 py-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
      <a href="{{ product_data.url }}">
          {% if product_data.featured_image %}
              <div class="h-80 overflow-hidden">
                  <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"  src="{{ product_data.featured_image | img_url: 'medium' }}" alt="{{ product.feautured_image.alt }}">
              </div>
          {% else %}
              {{ 'product-1'| placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}    
          {% endif %}
      </a>
      
      <div class="flex flex-col p-4 border-t-2 border-gray-300">
         <span class="text-sm">{{ product_data.vendor }}</span>
         <a href="{{ product_data.url }}" class="text-gray-700 font-medium uppercase">{{ product_data.title }}</a>
         <p class="text-gray-500 ">{{ product_data.price | money }}</p>
      </div>
     
     
    </div>
 </div>
